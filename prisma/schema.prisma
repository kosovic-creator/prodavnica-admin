generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model Korisnik {
  id          String              @id @default(uuid())
  email       String              @unique
  lozinka     String
  ime         String
  prezime     String
  uloga       String              @default("korisnik")
  kreiran     DateTime            @default(now())
  azuriran    DateTime            @updatedAt
